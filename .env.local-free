# AI Voice Assistant - Local Free Configuration
# Runs completely free on your PC with local AI models

# Environment
ENVIRONMENT=local-free
DEBUG=true
LOG_LEVEL=INFO

# Local Free Mode (No External APIs)
LOCAL_FREE_MODE=true
USE_LOCAL_MODELS=true
SIMULATE_CALLS=true
SIMULATE_SMS=true

# Local AI Models Configuration
STT_ENGINE=whisper_local
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

TTS_ENGINE=coqui
COQUI_MODEL=tts_models/en/ljspeech/tacotron2-DDC

NLU_ENGINE=spacy
SPACY_MODEL=en_core_web_sm

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/voice_assistant
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Dummy API Keys (Not Used in Local Mode)
OPENAI_API_KEY=local_mode_not_used
TWILIO_ACCOUNT_SID=local_mode_not_used
TWILIO_AUTH_TOKEN=local_mode_not_used
TWILIO_PHONE_NUMBER=+1234567890

# Google Calendar (Optional - Use Real Credentials if You Want)
GOOGLE_CREDENTIALS_PATH=/app/credentials/google-credentials.json
GOOGLE_CALENDAR_ID=primary

# Service Ports
CALL_HANDLER_PORT=8001
STT_SERVICE_PORT=8002
TTS_SERVICE_PORT=8003
NLU_SERVICE_PORT=8004
APPOINTMENT_SERVICE_PORT=8005
SMS_SERVICE_PORT=8006
WEB_INTERFACE_PORT=3000

# Cache (Local Redis)
REDIS_URL=redis://redis:6379
CACHE_DEFAULT_TTL=3600

# Performance Settings (Optimized for Local PC)
HTTP_MAX_CONNECTIONS=20
HTTP_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=5

# Local Model Settings
MODEL_CACHE_DIR=/app/models
ENABLE_GPU=false
BATCH_SIZE=1
MAX_AUDIO_LENGTH=300

# Web Interface Settings
WEB_UI_ENABLED=true
WEB_UI_TITLE=AI Voice Assistant - Local Free
DEMO_DATA_ENABLED=true