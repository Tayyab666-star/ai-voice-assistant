# AI Voice Assistant - Demo Mode Configuration
# This runs the system completely free without any external APIs

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Demo Mode Settings (No real APIs needed)
DEMO_MODE=true
SIMULATE_CALLS=true
SIMULATE_SMS=true
USE_LOCAL_MODELS=true

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/voice_assistant
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Local AI Models (Free)
WHISPER_MODEL=base
TTS_ENGINE=coqui
NLU_ENGINE=spacy

# Dummy API Keys (Not Actually Used)
OPENAI_API_KEY=demo_key_not_used
TWILIO_ACCOUNT_SID=demo_sid_not_used
TWILIO_AUTH_TOKEN=demo_token_not_used
TWILIO_PHONE_NUMBER=+1234567890

# Google Calendar (Optional - can use real credentials)
GOOGLE_CREDENTIALS_PATH=/app/credentials/demo-credentials.json
GOOGLE_CALENDAR_ID=primary

# Service Ports
CALL_HANDLER_PORT=8001
STT_SERVICE_PORT=8002
TTS_SERVICE_PORT=8003
NLU_SERVICE_PORT=8004
APPOINTMENT_SERVICE_PORT=8005
SMS_SERVICE_PORT=8006
WEB_INTERFACE_PORT=3000

# Cache Settings
REDIS_URL=redis://redis:6379
CACHE_DEFAULT_TTL=3600

# Performance Settings
HTTP_MAX_CONNECTIONS=50
HTTP_TIMEOUT=30