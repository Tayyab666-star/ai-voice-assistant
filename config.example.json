{
  "environment": "development",
  "debug": true,
  "log_level": "INFO",
  "auto_reload": true,
  "reload_interval": 30,
  
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "voice_assistant",
    "username": "postgres",
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30
  },
  
  "twilio": {
    "webhook_base_url": "https://your-domain.com"
  },
  
  "openai": {
    "model": "gpt-4",
    "whisper_model": "whisper-1",
    "max_tokens": 1000,
    "temperature": 0.7
  },
  
  "google": {
    "credentials_path": "./credentials/google-service-account.json",
    "calendar_id": "primary",
    "project_id": "your-google-project-id"
  },
  
  "services": {
    "call_handler": {
      "host": "localhost",
      "port": 8001,
      "debug": false,
      "workers": 2,
      "timeout": 30
    },
    "stt_service": {
      "host": "localhost",
      "port": 8002,
      "debug": false,
      "workers": 1,
      "timeout": 30
    },
    "tts_service": {
      "host": "localhost",
      "port": 8003,
      "debug": false,
      "workers": 1,
      "timeout": 30
    },
    "nlu_service": {
      "host": "localhost",
      "port": 8004,
      "debug": false,
      "workers": 1,
      "timeout": 30
    },
    "appointment_service": {
      "host": "localhost",
      "port": 8005,
      "debug": false,
      "workers": 1,
      "timeout": 30
    },
    "sms_service": {
      "host": "localhost",
      "port": 8006,
      "debug": false,
      "workers": 1,
      "timeout": 30
    }
  },
  
  "security": {
    "api_key_header": "X-API-Key",
    "jwt_expiry_hours": 24,
    "rate_limit_per_minute": 60,
    "allowed_origins": ["http://localhost:3000", "https://your-domain.com"]
  }
}