# AI Voice Assistant - Free AI Models Configuration
# Uses local AI models instead of paid APIs

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Free AI Models Configuration
USE_LOCAL_MODELS=true
OPENAI_API_KEY=not_required

# Local Whisper for Speech-to-Text (Free)
STT_ENGINE=whisper_local
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Coqui TTS for Text-to-Speech (Free)
TTS_ENGINE=coqui
COQUI_MODEL=tts_models/en/ljspeech/tacotron2-DDC
COQUI_VOCODER=vocoder_models/en/ljspeech/hifigan_v2

# spaCy for Natural Language Understanding (Free)
NLU_ENGINE=spacy
SPACY_MODEL=en_core_web_sm

# Communication Mode
COMMUNICATION_MODE=web
WEB_INTERFACE_PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/voice_assistant

# Twilio (Optional - for real calls if you want)
TWILIO_ACCOUNT_SID=your_twilio_sid_if_needed
TWILIO_AUTH_TOKEN=your_twilio_token_if_needed
TWILIO_PHONE_NUMBER=your_phone_if_needed

# Google Calendar (Optional)
GOOGLE_CREDENTIALS_PATH=/app/credentials/google-credentials.json
GOOGLE_CALENDAR_ID=primary

# Service Configuration
CALL_HANDLER_PORT=8001
STT_SERVICE_PORT=8002
TTS_SERVICE_PORT=8003
NLU_SERVICE_PORT=8004
APPOINTMENT_SERVICE_PORT=8005
SMS_SERVICE_PORT=8006

# Cache
REDIS_URL=redis://redis:6379
CACHE_DEFAULT_TTL=3600